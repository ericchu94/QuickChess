<div id="game-home">
  <div class="row">
    <div class="col-lg-12 text-center">
      Player 1
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 text-center">
      <div id="board">
        <% for (var i = 0; i < 8; ++i) { %>
          <% for (var j = 0; j < 8; ++j) { %>
            <div class="square text-center square-<%= ((i + j) % 2) ? "white" : "black" %>" id=square-<%= String.fromCharCode(97 + j) + (i + 1) %>">
              <% if (board[i][j]) { %>
                <div class="piece piece-<%= board[i][j].color %> piece-<%= board[i][j].piece %>"><%= board[i][j].piece.toUpperCase() %></div>
              <% } %>
            </div>
          <% } %>
          <br>
        <% } %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 text-center">
      Player 2
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Spectators</h3>
        </div>
        <div class="panel-body">
          <%= specs %>
        </div>
      </div>
    </div>
  </div>

</div>
